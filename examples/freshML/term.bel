%{
list: type.
nil: list.
cons: term -> list -> list.


rec append: {g:(ctx)*} list [g] -> list [g] -> list [g] =
FN g => fn l1 => fn l2 => case l1 of
| [g] nil => l2
| [g] cons (X ..) (L ..) =>
  let [g] L' .. = append [g] ([g] L ..) l2 in
    [g] cons (X ..) (L' ..)
;


% There is no way to guarantee that lists contain only variables
% unless we explictly keep track of this fact via a hypothetical judgment
% i.e., introduce extra judgment var:term -> type and change lists to
% keep track of var T instead of terms.
% This is however also not really necessary to remove an element from a list.
% see rm' function.

rec rm : {g:(ctx)*} list[g,x:term] -> list[g] =
FN g => fn l => case l of
| [g,x:term] nil => [g] nil
| [g,x:term] cons x (L .. x)  =>
    rm [g] ([g,x] L .. x)

 | [g,x:term] cons (#p .. ) (L .. x) =>
  let [g] L' .. = rm [g] ([g,x] L .. x) in
   [g] cons (#p ..) (L' ..)

;


% OR more generally ...

rec rm' : {g:(ctx)*} list[g,x:term] -> list[g] =
FN g => fn l => case l of
| [g,x:term] nil => [g] nil

% the next case succeeds if x does not occur in U
| [g,x:term] cons (U .. ) (L .. x) =>
  let [g] L' .. = rm' [g] ([g,x] L .. x) in
   [g] cons (U ..) (L' ..)

% this case hence succeeds if x does occur in U
| [g,x:term] cons (U .. x) (L .. x)  =>
    rm' [g] ([g,x] L .. x)
;


rec fv : {g:(ctx)*} term[g] -> list [g] =
FN g => fn t => case t of
| [g] const I => [g] nil
| [g] #p ..    => [g] cons (#p ..) nil
| [g] app (T1 ..) (T2 ..) =>
  append [g] (fv [g] ([g] T1 ..))
          (fv [g] ([g] T2 ..))

| [g] lam \x. T .. x =>
  let [g,x:term] L .. x = fv [g,x:term] ([g,x] T .. x) in
    rm' [g] ([g,x] L .. x)

| [g] letv (T1 ..) (\x. T2 .. x) =>
  let [g] L1 .. = fv [g] ([g] T1 .. ) in
  let [g,x:term] L2 .. x = fv [g,x:term] ([g,x] T2 .. x) in
  append [g] ([g] L1 .. )
             (rm' [g] ([g,x] L2 .. x))
;



% Micro-type checker
tp:type.
nt: tp.
arr: tp -> tp -> tp.

tm: type.
lamt   : tp -> (tm -> tm) -> tm.
apply  : tm -> tm -> tm.
cnst   : nat -> tm.


env: type.
empty: env.
push: tm -> tp -> env -> env.

opt: type.
nothing: opt.
just: tp -> opt.

schema tms = tm ;

rec memb: {g:(tms)*} tm[g] -> env[g] -> opt [] =
FN g => fn e => fn l => case l of
| [g] empty => [ ] nothing
| [g] push (E' .. ) T (L .. ) =>
  if e == ([g] E' .. ) then
    [ ] just T
  else
    memb [g] e ([g] L .. )
;


rec typing: {g:(tms)*} tm[g] -> env[g] -> opt [ ] =
FN g => fn e => fn l =>
case e of
| [g] #p ..  =>  memb [g] ([g] #p .. ) l

| [g] lamt T (\x. M .. x) =>
  let [g] L .. = l in
    typing [g,x:tm] ([g,x] M .. x) ([g,x] push x T (L .. ))

%{ | [g] apply (M1 .. ) (M2 .. ) =>
  (case typing [g] ([g] M1 .. ) l of
     | [ ] just (arr T2 T) =>
       (case typing [g] ([g] M2 .. ) l of
         | [ ] just T2' =>
           if ([ ] T2) == ([ ] T2') then
             [ ] just T
           else
             [ ] nothing


         | [ ] nothing => [ ] nothing

       )
     | [ ] U => [ ] nothing
  )
}%
;


% using dependent types probably avoids explicit look-ups and environments
}%
