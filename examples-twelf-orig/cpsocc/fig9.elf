%%%%% Figure 9 : Cont-valid control stacks
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

cvalCS : (ccont -> cstack) -> type.
%mode cvalCS +Phi.

cvalCS_init : cvalCS ([k]cdot).

cvalCS_vlam : cvalCS ([k](ccons (Phi k) (vlam ([v] E v k))))
              <- cvalCS Phi
              <- {v:ctriv}{cvv:cvalT v}
                 cvalE ([c] E v c).

%terminates Phi (cvalCS Phi).
