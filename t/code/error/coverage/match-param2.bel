--coverage

term: type.
lam:(term -> term) -> term.

bool: type.
tt:bool.
ff: bool.

schema ctx = term;

rec occurs :(g:ctx)[g,y:term |- term] -> [ |- bool] =
fn l => case l of
| [g,y:term |- y] => [ |- tt]
| [g,y:term |- #p[..]] => [|- ff]
| [g, y:term |- lam \x. M[..,y,x]] => occurs [g, x:term, y:term |- M[..,y,x]]
;
