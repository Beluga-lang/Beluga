% Substitution based evaluator
%   call-by-value strategy
%
%   Author: Brigitte Pientka
%

tp:type. 
exp: tp -> type.

nat: tp.
bool:tp.

z : exp nat.
s : exp nat -> exp nat.
tt: exp bool.
ff: exp bool.
Andalso: exp bool -> exp bool -> exp bool.


Add: exp nat -> exp nat -> exp nat.
Let: exp T1 -> (exp T1 -> exp T2) -> exp T2.



rec add : (exp nat)[.] -> (exp nat)[.] -> (exp nat)[.] = 
fn a => fn b =>
   (case a of
        box(. . z)  => b
      | box(. . s U![.]!) =>
        (case b of
          box(. . V![.]!) % : (exp nat) [.] 
	  => add (box(. U![.]!)) box(. s V![.]!))
)
;

rec and : (exp bool)[.] -> (exp bool)[.] -> (exp bool)[.] = 
fn a => fn b => 
 (case a of 
   box(.. tt) => b 
 | box(.. ff) => a)
;


rec eval : (exp T![.]!)[.] -> (exp T![.]!)[.] = 
% mlam T => 
fn e => 
(case e of
   box(. . z) => e
 | box(. . tt) => box(. tt)
 | box(. . ff) => box(. ff)

 | box(. . s U![.]!)  =>  
    (case (eval box(. U![.]!)) of 
     box (. . V![.]!)  => box(. s V![.]!))

| box(. . Andalso U1![.]! W1![.]!)  => 
       and (eval box( . U1![.]!)) (eval box( . W1![.]!))

 | box(. . Add U![.]! W![.]!)  => 
       add (eval  box( . U![.]!)) (eval box( . W![.]!))

 | box(. . Let  U![.]! (\x . W![. , x]!))  => 
    case (eval  box( . U![.]!)) of 
        box (. . V![.]!) 
	=>  eval  box( . W![. , V![.]! ]!)
);
