% Author: Brigitte Pientka


nat: type.
z: nat.
suc: nat -> nat.


term: type.
lam   : (term -> term) -> term.
app   : term -> term -> term.
letv  : term -> (term -> term) -> term.
const : nat -> term.

schema ctx = term ;

rec add: [. nat] -> [. nat] -> [. nat] =
fn m => fn n => case m of
| [. z] => n
| [. suc M] =>
  let [. K] = (add [. M]) n  in
   [. suc K]
;

rec size : {g:ctx} [g. term] -> [. nat] =
mlam g => fn t => case t of
| [g. #p ..] => [. suc z]
| [g. lam \x. T .. x] =>
  let [. K] = size [g,x:term] [g,x. T .. x ] in
   [. suc K]

| [g. app (T ..) (U ..)] =>
  let [. N] = add (size [g] [g. T ..])
                  (size [g] [g. U ..]) in
   [. suc N]


| [g. letv (T ..) (\x. U .. x)] =>
  let [. N] =   add (size [g] [g. T ..])
		    (size [g,x:term] [g,x. U .. x]) in
   [. suc N]

| [g. const I] => [. suc z]
;


