bareR : croot -> ctriv -> type.
bareE : cexp -> ctriv -> type.

%mode bareR +R -T.
%mode bareE +E -T.

% style here -fp
%{
bare_klam : bareR (klam E) A
            <- {k:ccont}
               {b:{t:ctriv}bareE (cret k t) t}
               bareE (E k) A.
}%

bare_klam : bareR (klam ([x] E x)) A
            <- {k:ccont}
               ({t:ctriv}bareE (cret k t) t)
               -> bareE (E k) A.

bare_cret : bareE (cret (vlam ([x] E x)) T) A
            <- bareE (E T) A.

bare_capp : bareE (capp (xlam ([x]klam ([y] E x y))) T C) A
            <- bareE (E T C) A.


%name bareR BARER.
%name bareE BAREE.

