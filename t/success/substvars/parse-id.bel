tm : type.
i : tm.

schema ctx = tm;

rec f : {g:ctx}{h:ctx} {#S : g[h]} { M : [g. tm]} [h. tm] =
mlam g => mlam h => mlam #S => mlam M => [h. M #S[..] ]
;

rec f2 : {g:ctx} {M:[g.tm]} [g.tm] =
mlam g => mlam M => f [g] [g] [g $ .. ] [g. M ..]
;

datatype IsWeakening : {g:ctx} {h:ctx} {#S:g[h]}ctype =
| Con : IsWeakening [g] [g] [g $ .. ]
;
