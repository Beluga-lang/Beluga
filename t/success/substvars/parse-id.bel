tm : type.
i : tm.

schema ctx = tm;

rec f : {g:ctx}{h:ctx} {#S : [h |- g]} { M : [g |- tm]} [h |- tm] =
mlam g => mlam h => mlam #S => mlam M => [h |- M[#S[..]] ]
;

rec f2 : {g:ctx} {M:[g |- tm]} [g |- tm] =
mlam g => mlam M => f [g] [g] [g |- ..] [g |- M[..]]
;

inductive IsWeakening : {g:ctx} {h:ctx} {#S: [h |- g]}ctype =
| Con : IsWeakening [g] [g] [g |- .. ]
;
