% coverage checking example:
%
%   a trivial example of an empty (or "absurd") case

constructorless : type.

nat : type.
zero : nat.
succ : nat -> nat.

rec empty-example : constructorless[] -> nat[] =
  fn c =>
    case c of
      [] {}
;

schema nats = nat;

rec empty-example-2 : {g:nats} constructorless[g] -> nat[] =
  fn c =>
    case c of
      [g] {}
;

schema constructorlesses = constructorless;

rec empty-example-3 : {g:constructorlesses} constructorless[g] -> nat[] =
  fn c =>
    case c of
      [g] #p .. => (case [g] #p .. of [g] {})
%      [g] #p .. => (case [g] #p .. of [g] {} => [] zero)
;

rec empty-example-3X : {g:constructorlesses} constructorless[g] -> nat[] =
  fn c =>
    case c of
      [g] {}
;
